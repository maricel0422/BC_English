@model BC_English.Models.CoursesL;
@{
    ViewData["Title"] = "Home Page";
}



<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
   
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/pixabay_1281581_1920.jpg" alt="Photo of a library" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Read, Write, Explore, Share
                    <a class="btn btn-default" href="https://www.bellevuecollege.edu/english/" target="_blank">
                        Our English Department
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/bookshelf-413705_1280.jpg" alt="Photo of books" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Get inspired, read a new book!
                    <a class="btn btn-default" href="https://www.bellevuecollege.edu/lmc/" target="_blank">
                        Visit our Library
                    </a>
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="container">
    @if (Model.Courses == null)
    { 
        //Display a message if no courses are returned by the Json request
        <h2>There are not English courses available at this moment</h2>
    }
    else
    {

        @foreach (var item in Model.Courses)
        {
            <h3>
                @Html.DisplayFor(modelItem => item.Title) | <i> @Html.DisplayFor(modelItem => item.Credits) Credits
</i>
            </h3>
                        <p>
                @Html.DisplayFor(modelItem => item.Description)
            </p>

        }
    }

</div>

